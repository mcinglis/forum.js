{
    "node": true,

    "indent":         4,
    "maxcomplexity":  10,
    "maxdepth":       2,
    "maxlen":         1000,
    "maxparams":      3,
    "maxstatements":  20,
    "quotmark":       "single",

    "bitwise":    true,
    "camelcase":  true,
    "curly":      true,
    "eqeqeq":     true,
    "forin":      true,
    "immed":      true,
    "latedef":    true,
    "newcap":     true,
    "noarg":      true,
    "noempty":    true,
    "nonew":      true,
    "plusplus":   true,
    "strict":     true,
    "trailing":   true,
    "undef":      true,
    "unused":     true
}
